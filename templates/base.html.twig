<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="stylesheet" href="{{ asset('../assets/css/main.css') }}" />
        <link rel="stylesheet" href="{{ asset('../assets/css/font-awesome.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('../assets/css/ie8.css') }}" />
        <link rel="stylesheet" href="{{ asset('../assets/js/jquery.min.js') }}" />
        <link rel="stylesheet" href="{{ asset('../assets/js/jquery.dropotron.min.js') }}" />
        <link rel="stylesheet" href="{{ asset('../assets/js/jquery.scrollgress.min.js') }}" />
        <link rel="stylesheet" href="{{ asset('../assets/js/skel.min.js') }}" />
        <link rel="stylesheet" href="{{ asset('../assets/js/main.js') }}" />
        <link rel="stylesheet" href="{{ asset('../assets/js/util.js') }}" />
        <link rel="stylesheet" href="{{ asset('../assets/sass/ie8.scss') }}" />
        <link rel="stylesheet" href="{{ asset('../assets/sass/main.scss') }}" />
    </head>
    <body>
    <nav>
        <a href="../">Accueil</a>
        <a href="../team">Équipe</a>
        <a href="../training">Cours</a>
        <a href="../event">Évenement</a>
        {% if is_granted('ROLE_USER') == false %}
        <a href="../profil">Connexion</a>
        <a href="../register">S'inscrire</a>
        {% endif %}
        {% if is_granted('ROLE_USER') %}
            <a href="../profil">Mon profil</a>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="../admin">Administration</a>
            {% endif %}
            <a href="../logout">Déconnexion</a>
        {% endif %}
    </nav>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}

    {% for msg in app.session.flashBag.get('success') %}
        <div class="alert alert-success">
            {{ msg }}
        </div>
    {% endfor %}
    </body>
</html>
