{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    table tr:nth-child(odd){background-color: #e7e0e7;}
    table tr:nth-child(even){background-color: #aea9ae;}
    table tr th{background-color: #373537; color: white;}
    table tr td, table tr th {padding: 0 6px}
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! ✅</h1>
    <p>C'est la page des events sa mère</p>

    <table>
        <tr>
            <th></th>
            <th>Nom</th>
            <th>Date</th>
            <th>Heure</th>
            <th>Description</th>
            <th>Réserver</th>
        </tr>
        {% for event in events %}
            <tr>
                <td>{{ event.isCanceled ? 'Annulé' : ''}}</td>
                <td>{{ event.title }}</td>
                <td>{{ event.day|date('d') }}</td>
                <td>{{ event.hour|date('H:i') }}</td>
                <td>{{ event.description }}</td>
                <td>Je réserve</td>
            </tr>
        {% endfor %}
    </table>

</div>
{% endblock %}
