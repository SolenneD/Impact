{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    table tr:nth-child(odd){background-color: #e7e0e7;}
    table tr:nth-child(even){background-color: #aea9ae;}
    table tr th{background-color: #373537; color: white;}
    table tr td, table tr th {padding: 0 6px}
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! ✅</h1>
    <p>C'est la page de la gestion des cours par les admins sa mère</p>

    <h2>Ajouter un cours</h2>
    {{ form_start(form) }}
    {{ form_row(form.title) }}
    {{ form_row(form.day) }}
    {{ form_row(form.hour) }}
    {{ form_row(form.periode) }}
    {{ form_row(form.intensite) }}
    {{ form_row(form.coach) }}

    <button type="submit">Ajouter</button>
    {{ form_end(form) }}

    <h2>Gestion des cours</h2>

    <table>
        <tr>
            <th>Cours</th>
            <th>Coach</th>
            <th>Date</th>
            <th>Heure</th>
            <th>Durée</th>
            <th>Intensité</th>
            <th>Annulation</th>
        </tr>
        {% for training in trainings %}
            <tr>
                <td>{{ training.title }}</td>
                <td>{{ training.coach != null ? training.coach.name : '' }}</td>
                <td>{{ training.day|date('d') }}</td>
                <td>{{ training.hour|date('H:i') }}</td>
                <td>{{ training.periode }}min</td>
                <td>{{ training.intensite }}</td>
                <td>{{ training.isCanceled ? 'Annulé' : ''}}</td>
                <td>
                    <a href="{{ path('updatecours', {'id': training.id}) }}">Annuler</a>
                </td>
            </tr>
        {% endfor %}
    </table>


</div>
{% endblock %}
